{
  "manifest_version": 3,
  "name": "WhatsApp News Extractor",
  "version": "1.1",
  "description": "Extract headlines from multiple WhatsApp Web channels",
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}
